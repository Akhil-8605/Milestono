{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",               // ← ensure TS resolves paths from project root
    "paths": {
      "@/*": ["./*"],
      "@env": ["env.ts"]          // ← map `@env` to your shim file
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",              // if you still want this
    "env.ts"                      // ← make sure TS includes the shim
  ]
}
